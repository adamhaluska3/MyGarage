<?xml version="1.0" encoding="utf-8" ?>
<Shell
    x:Class="MyGarage.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MyGarage"
    xmlns:views="clr-namespace:MyGarage.Views">
    <FlyoutItem FlyoutDisplayOptions="AsMultipleItems">
        <Tab Title="Vehicles">
            <ShellContent Title="Vehicles" ContentTemplate="{DataTemplate local:MainPage}" />
        </Tab>
    </FlyoutItem>

    <ShellContent Title="Settings" ContentTemplate="{DataTemplate views:SettingsPage}" />
    <ShellContent Title="About" ContentTemplate="{DataTemplate views:AboutPage}" />

</Shell>